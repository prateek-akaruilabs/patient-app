<div class='container' style="padding: 100px 0px">
    <div class='mb-3 row'>
        <div class='col-md-12'>
            <%= form_with url: "/search", method: :get do |form| %>
                <%= form.search_field :query, placeholder: 'Search by name/email', class: 'form-control' %>
            <% end %>
        </div>
    </div>
    <div class='mb-3 row'>
        <div class='col-md-12'>
            <p class="fs-1 fw-bold float-start">
                Patients 
                <a class='btn btn-primary' href=<%= new_patient_path %>>New Patient</a>
            </p>
            <p class="fs-1 fw-bold float-end">
                <a class='btn btn-secondary' href=<%= patients_path(type: 'upcoming') %>>Upcoming</a>
            </p>
        </div>
    </div>
    <div class='mb-3 row'>
        <div class='col-md-12'>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Next Appointment</th>
                    </tr>
                </thead>
                <%= will_paginate @patients %>
                <%= render @patients %>
            </table>
            <% if @patients.count == 0 %>   
                <h5>No Patient record is present.</h5>
            <% end %>
        </div>
    </div>
</div>